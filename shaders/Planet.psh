struct PS_Input
{
    float4 Position : SV_POSITION;
    float3 Normal : NORMAL;
    float2 UV : TEXCOORD;
};

struct PS_Output
{
    float4 Colour : SV_Target;
};

void main(in PS_Input v_in, out PS_Output colour)
{
    float3 lightDir = float3(0.0f, 0.5f, -0.5f);
    float3 lightCol = float3(1.0f, 1.0f, 1.0f);
    float3 diffuse = float3(0.0f, 0.7f, 0.1f);

    float3 light = diffuse * lightCol * max(dot(v_in.Normal, lightDir), 0.0f);
    colour.Colour = float4(light, 1.0f);
}